{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    // "noUnusedLocals": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "removeComments": true,
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": ["src/**/*.ts","src/**/*.tsx"]
}
